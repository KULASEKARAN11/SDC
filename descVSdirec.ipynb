# Define consistent programming concepts to compare
programming_concepts = {
    "language1": "Java",
    "language2": "Python",
    "concept": "object-oriented programming",
    "example": "implementing a class with inheritance"
}

# Define prompts that use the same core elements
descriptive_prompt = f"""
Explain {programming_concepts['concept']} in {programming_concepts['language1']} with a detailed example of {programming_concepts['example']}.
Provide a thorough comparison with how it works in {programming_concepts['language2']}.
"""

directive_prompt = f"""
In exactly 5 bullet points, list the key differences between {programming_concepts['language1']} and {programming_concepts['language2']}
for {programming_concepts['concept']}, specifically regarding {programming_concepts['example']}.
"""

# Generate outputs for both prompts
print("=== Descriptive Prompt Output ===")
desc_output = generate_accurate_text(descriptive_prompt, max_length=300)
print(desc_output)

print("\n=== Directive Prompt Output ===")
dir_output = generate_accurate_text(directive_prompt, max_length=200)
print(dir_output)

# Verify consistency
print("\n=== Consistency Check ===")
elements_to_check = [programming_concepts['language1'], programming_concepts['language2'],
                    programming_concepts['concept'], programming_concepts['example'].split('a ')[-1]]

for element in elements_to_check:
    desc_present = element.lower() in desc_output.lower()
    dir_present = element.lower() in dir_output.lower()
    print(f"Element '{element}': Descriptive {'✅' if desc_present else '❌'} | Directive {'✅' if dir_present else '❌'}")
